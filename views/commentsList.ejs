        <script type="text/javascript">

            //默认请求第一页数据
            getData(0);

            //Ajax获取分页条
            $.get("/commentsList?Picture_id=<%=Picture_id%>&action=count", function (result) {
                let amount = parseInt(result.result);
                //总页数
                pageamount = Math.ceil(amount / 5);
                for (let i = 1; i <= pageamount; i++) {
                    $(".pagination").append("<li><a href='javascript:void(0);'>" + i + "</a></li>");
                }
                $(".pagination li:first").addClass("active");
                //监听
                $(".pagination li").click(function () {
                    let page = $(this).index();
                    getData(page);
                    $(this).addClass("active").siblings().removeClass("active");
                });
            })

            //Ajax请求数据
            function getData(page) {
                $.get("/commentsList?Picture_id=<%=Picture_id%>&action=find&page=" + (page), function (result) {
                    //模板函数
                    var compiled = _.template($("#template").html());
                    //清空全部留言中的所有节点
                    $("#comments").html("");
                    for (var i = 0; i < result.length; i++) {
                        //数据绑定
                        var html = compiled({
                            content: result[i].comment.content,
                            name: result[i].user_id.username,
                            date: result[i].date,
                            Picture_id: "<%=Picture_id%>",
                            id: result[i]._id,
                        });
                        //DOM操作，添加节点
                        $("#comments").append($(html));
                    }
                });
            }

            //Ajax提交表单
            $("#submit").click(function () {
                $("#fail").hide();
                $("#sucesss").hide();
                $.post("/commentsList", {
                    "picture_id": "<%=Picture_id%>",
                    "content": $("#content").val()
                }, function (result) {
                    if (result.result == -1) {
                        $("#fail").fadeIn();
                    } else if (result.result == 1) {
                        //提交成功
                        $("#success").fadeIn();
                        //重新加载数据
                        getData(0);
                    }
                });
            });
        </script>





















